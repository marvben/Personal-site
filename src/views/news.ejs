<%- include('partials/head.ejs') %>
    <%- include('partials/header.ejs') %>

        <main class="news-page">
            <section class="section-one container-fluid text-light p-0">
                <div class="container-fluid py-5 px-lg-5 px-md-4 px-3 quoteContainer">
                    <h1 class="display-5 fw-bold quoteAuthor"></h1>
                    <p class="col-md-8 fs-4 my-4 quoteMessage">Loading...</p>
                    <button class="btn button btn-lg btn-light  getButton" type="button">Get New Quote</button>
                </div>

                <div class="creditText px-5 py-2">Inspirational quotes provided by <a href="https://zenquotes.io/"
                        target="_blank">ZenQuotes API</a>
                </div>
            </section>
            <section class="d-flex  flex-column align-items-center section-two light-section d-none">

                <div class="text-center  col-12 col-lg-7 col-md-10 p-md-0 p-4">
                    <h2 class="subtitle mb-0 p-0 text-center">Latest world <span class="stylish-text">News</span>.</h2>
                    <p class="description description-section--one text-dark mx-auto my-md-5 py-5">These are top
                        headlines <a href="https://newsapi.org/" target="_blank">Newsapi.</a>
                    </p>

                    <form id="newsForm" class="form-control p-md-5 p-4 rounded-2 ">
                        <label class="form-group text-start d-block w-100" for="region"> Choose Region:
                            <select id="region" class="form-select form-select-lg mb-3 countryRoot"
                                aria-label="Default select example" name="country">
                                <option class="text-capitalize" value="us">Us</option>
                            </select>
                        </label>

                        <label class="form-group  text-start d-block w-100" for="category"> Choose Category:</label>
                        <select id="category" class="form-select form-select-lg mb-3 categoryRoot"
                            aria-label="Default select example" name="categoty">
                            <option class="text-capitalize" value="technology">Technology</option>
                        </select>
                    </form>

                </div>
            </section>

            <section class="new-blog-section p-md-5 p-2 d-flex  flex-column align-items-center justify-content-start d-none">
                <div class="spinner-grow loadingSpinner mt-5" style="width: 10rem; height: 10rem;" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <div
                    class="newsRoot row container-fluid row justify-content-between h-100  my-lg-5 mx-0 article-card order-0">

                </div>

            </section>

            <div class="container-fluid p-0 m-0 curvySection">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
