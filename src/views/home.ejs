            <section id="testimonial"
                class=" section-three light-section testimonialSection flex-column align-items-center justify-content-center px-0">
                <h3 class="subtitle mb-5 px-2 ">Reviews from my amazing clients!</h3>
                <!-- Carousel wrapper -->
                <div id="carouselControl2" class="carousel slide" data-bs-ride="carousel">
                    <!-- Controls -->
                    <div class="d-flex justify-content-center mb-4">
                        <button class="carousel-control-prev position-relative " type="button"
                            data-bs-target="#carouselControl2" data-bs-slide="prev">
                            <div class="controlArrow">
                                <i class="fas fa-angle-left" aria-hidden="true"></i>
                                <span class="visually-hidden">Previous</span>
                            </div>
                        </button>
                        <button class="carousel-control-next position-relative " type="button"
                            data-bs-target="#carouselControl2" data-bs-slide="next">
                            <div class="controlArrow">
                                <i class="fas fa-angle-right" aria-hidden="true"></i>
                                <span class="visually-hidden">Next</span>
                            </div>
                        </button>
                    </div>
                    <!-- Inner -->
                    <div class="carousel-inner py-4">
                        <% reviews.forEach(review=> { %>
                            <div class="carousel-item container-fluid setOfReview">
                                <div class="row  p-lg-5  p-md-0 p-2  reviewBox-container justify-content-center">
                                    <% review.forEach((oneReview)=>{ %>
                                        <div class="col-md-5 reviewBox p-4">
                                            <ul
                                                class="list-unstyled d-flex justify-content-start text-warning mb-0 reviewStars">
                                                <li><i class="fas fa-star fa-sm"></i></li>
                                                <li><i class="fas fa-star fa-sm"></i></li>
                                                <li><i class="fas fa-star fa-sm"></i></li>
                                                <li><i class="fas fa-star fa-sm"></i></li>
                                                <li><i class="fas fa-star fa-sm"></i></li>
                                            </ul>
                                            <p class="text-muted description review my-4">
                                                <i class="fas fa-quote-left pe-2"></i>
                                                <%= oneReview.review %>
                                            </p>
                                            <h5 class="mb-3 clientName">
                                                <%= oneReview.clientName %>, <span class="companyName">
                                                        <%= oneReview.companyName %>
                                                    </span>
                                            </h5>
                                            <a href="<%=oneReview.siteUrl%>" target="_blank" class="reviewSiteLink">view
                                                site</a>
                                        </div>
                                        <% }) %>
                                </div>
                            </div>
                            <%})%>
                    </div>
                </div>

                <a class="btn button btn-lg btn-light " href="https://www.upwork.com/freelancers/~01baf9a8d789832047"
                    target="_blank">Read more on Upwork!</a>
                <!-- Carousel wrapper -->
            </section>

